name: Deploy to production

on:
  push:
    branches:
      - main

jobs:
  deploy:
    name: SCP files to server
    runs-on: ubuntu-latest

    steps:
      - name: SCP files via ssh key
        uses: actions/checkout@v2
      - name: install sshpass
        run: apt install sshpass
      - name: do scp
        run: sshpass -p ${{ secrets.SERVER_PASSWORD }} scp -r . ${{ secrets.SERVER_USER_NAME }}@${{ secrets.SERVER_IP }}:/srcmain

